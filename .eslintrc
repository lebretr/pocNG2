{
    "ecmaFeatures": {
        "blockBindings": true,
        "forOf": true
    },
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 2
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "mocha": true
    },
    "globals": {
        "angular": true,
        "$": true,
        "_": true
    },
    "extends": "eslint:recommended"
}
